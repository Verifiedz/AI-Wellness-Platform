{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AIWrapperService": "Information"
    }
  },
  "AllowedHosts": "*",

  // OpenAI Configuration
  // Set OpenAI:ApiKey in .env file (not committed to source control)
  "OpenAI": {
    "BaseUrl": "https://api.openai.com/v1/"
    // ApiKey loaded from .env: OPENAI__APIKEY=sk-...
  },

  // AI Wrapper Service Configuration
  // Set AiService:InternalApiKey in .env file (not committed to source control)
  "AiService": {
    "RateLimitPerMinute": 60
    // InternalApiKey loaded from .env: AISERVICE__INTERNALAPIKEY=your-secret-key
  }
}
