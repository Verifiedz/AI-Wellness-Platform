{
  "ConnectionStrings": {
    "PostgreSQL": "Host=localhost;Port=5432;Database=authdb;Username=postgres;Password=PostPass;Include Error Detail=true"
  },
  "Jwt": {
    "Key": ";5XIR!d1IBBAS]$;{6Z&GiMG@GaXv.nN",
    "Issuer": "AIWellness",
    "Audience": "AIWellnessUsers",
    "ExpiryInMinutes": 60
  },
  "PasswordPolicy": {
    "MinLength": 8,
    "RequireUppercase": true,
    "RequireLowercase": true,
    "RequireDigit": true,
    "RequireSpecialChar": true
  },
  "RateLimiting": {
    "MaxRequestsPerMinute": 100,
    "MaxLoginAttemptsPerMinute": 5
  },
  "AccountLockout": {
    "MaxFailedAttempts": 5,
    "LockoutMinutes": 15
  },
  "NotificationService": {
    // Base URL for the notification-service.
    // In local development you typically run it on port 5002 (see root docker-compose.yml).
    // When running both services via docker-compose, this can be overridden with an
    // environment variable to use the container DNS name instead, e.g.:
    //   NotificationService__BaseUrl=http://notification_service_api:8080
    "BaseUrl": "http://notification_service_api:8080",
    "SendCodeEndpoint": "/api/notifications/send-code"
  },
  "ReverseProxy": {
    "Routes": {
      "chat-route": {
        "ClusterId": "chat-cluster",
        "Match": {
          "Path": "/chat/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "chat-cluster": {
        "Destinations": {
          "chat-service": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "notification-service": {
            // In local development, the notification service listens on port 5002
            // (host port mapped to container port 8080). When everything runs
            // inside docker-compose, you can override this with an environment
            // variable to use the container DNS name instead, e.g.:
            //   ReverseProxy__Clusters__notification-cluster__Destinations__notification-service__Address=http://notification_service_api:8080/
            "Address": "http://notification_service_api:8080/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "AIWellness.Auth": "Information",
      "Yarp": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*"
}